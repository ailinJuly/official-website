<!DOCTYPE html>
<html>
    <head>
        <title>Admin
        </title>
        <%= csrf_meta_tags %>
    <%= tag "meta", name: "fp-apikey", content: Rails.application.config.filepicker_rails.api_key %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    </head>

    <body>

        <div class="container">
            <%= render "common/admin_navbar" %>
            <%= render "common/flashes" %>
            <div class="row" style=" padding-top:20px;">
                <div class="col-md-2">
                    <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">

                        <li><%= active_link_to("類別", admin_categories_path , :active => :inclusive, :wrap_tag => :li ) %></li>
                        <li><%= active_link_to("問題", admin_faqs_path , :active => :inclusive, :wrap_tag => :li ) %></li>
                        <li><%= active_link_to("使用者", admin_users_path , :active => :inclusive, :wrap_tag => :li ) %></li>
                    </ul>

                </div>

                <div class="col-md-10">
                    <%= render_breadcrumb %>
                    <%= yield %>
                </div>
            </div>
        </div>

    </body>
    <div class="container">
        <%= render "common/footer" %>
    </div>



          <%= filepicker_js_include_tag %>

            <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <%= yield :javascripts %>
</html>
