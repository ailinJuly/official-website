<h1>類別</h1>


<div class="clearfix">
  <%= link_to 'New Category', new_admin_category_path, :class => "btn btn-default pull-right" %>

</div>

  <br>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @categories.each do |category| %>
        <tr>
            <td><%= link_to(category.title,  admin_category_path(category) ) %></td>

            <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
            <td><%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>
